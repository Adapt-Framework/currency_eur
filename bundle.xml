<?xml version="1.0" encoding="UTF-8"?>
<adapt_framework>
    <bundle>
        <name>currency_eur</name>
        <label>Currency EUR</label>
        <description>Euro</description>
        <namespace>\adapt\currency\eur</namespace>
        <version_status>release</version_status>
        <availability>public</availability>
        <copyright>2017 Matt Bruton</copyright>
        <license>MIT</license>
        <type>currency</type>
        <version>0.9.0</version>
        <vendor>
            <name>Adapt Framework</name>
            <website>https://www.adaptframework.com</website>
        </vendor>
        <author>
            <name>Matt Bruton</name>
            <email>matt.bruton@gmail.com</email>
        </author>
        <depends_on>
            <bundle>
                <name>adapt</name>
                <version>2.0</version>
            </bundle>
            <bundle>
                <name>currency</name>
                <version>0.9</version>
            </bundle>
        </depends_on>
        <settings>
            <category name="Default currency">
                <setting>
                    <name>default.currency</name>
                    <label>Default currency</label>
                    <default_value>eur</default_value>
                </setting>
            </category>
        </settings>
        <schema>
            <add>
                <table name="currency">
                    <record>
                        <name>eur</name>
                        <label>Euro</label>
                        <iso_code>EUR</iso_code>
                        <decimal_places>2</decimal_places>
                        <decimal_separator>.</decimal_separator>
                        <thousands_separator>,</thousands_separator>
                        <symbol_whole>€</symbol_whole>
                        <symbol_partial>¢</symbol_partial>
                        <symbol_whole_html>&amp;euro;</symbol_whole_html>
                        <symbol_partial_html>&amp;cent;</symbol_partial_html>
                    </record>
                </table>
            </add>
        </schema>
    </bundle>
</adapt_framework>
